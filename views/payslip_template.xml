<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="payslip_print" inherit_id="nexus_hr.nexus_hr_paslip_new">
        <xpath expr="//t" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <link
                            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                            rel="stylesheet"
                            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                            crossorigin="anonymous"
                        />
                        <style>
                            .nexus-green {
                            background-color: #019900;
                            color: #ffffff;
                            }
                            .fit-text {
                            font-size: 2vw; /* Start with a base size */
                            white-space: nowrap;
                            width: 100%;
                            }
                            .nexus-green-color {
                            color: #019900;
                            }
                            .nexus-yellow {
                            background-color: #ffff02;
                            }
                            .nexus-gray {
                            background-color: #f2f2f2;
                            }
                            .nexus-border {
                            border-color: #019900 !important;
                            }
                            .image-box {
                            width: 160px !important;
                            height: 160px !important;

                            }
                            .overflow{
                            overflow: hidden;
                            }
                        </style>

                        <!-- main container -->
                        <div class="container p-5 nexus-gray overflow">
                            <div class="row bg-white">
                                <div class="col-12">
                                    <!-- header section -->
                                    <div class="o_boxed_header">
                                        <div class="row" style="border-bottom:1px solid black;">
                                            <div class="col-4  mb-2 mt-0">
                                                <img t-if="o.company_id.logo"
                                                    t-att-src="image_data_uri(o.company_id.logo)"
                                                    style="max-height: 165px;float:left;" alt="Logo" />
                                                <br />
                                                <!-- <h6>EVERYTHING SOLAR</h6> -->
                                            </div>
                                            <div class="col-4 mb-2" />
                                            <div class="col-4 mb-2"
                                                style="padding-top:20px; position:relative;">
                                                <h2 class="nexus-green-color"
                                                    style="font-size: 50px; font-weight:bold; position:absolute; top:50%;">
                                                    PAYSLIP</h2>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end of header section -->

                                    <!-- intro section -->
                                    <div class="row">
                                        <div class="col-12">
                                            <!-- header row -->
                                            <div class="row nexus-green fw-bolder text-capitalize">
                                                <div
                                                    class="col-3 border border-bottom-0 border-light">
                                                    Employee name
                                                </div>
                                                <div
                                                    class="col-3 border border-bottom-0 border-light">
                                                    department
                                                </div>
                                                <div
                                                    class="col-2 border border-bottom-0 border-light">
                                                    Pay month
                                                </div>
                                                <div
                                                    class="col-2 border border-bottom-0 border-light">
                                                    year</div>
                                                <div
                                                    class="col-2 border border-bottom-0 border-light">
                                                    Pay type
                                                </div>
                                            </div>
                                            <!-- end of header row -->

                                            <!-- column section -->
                                            <div class="row">
                                                <div
                                                    class="col-3 border-light border-top border-4 nexus-yellow">
                                                    <t t-esc="o.employee_id.name" />
                                                </div>
                                                <div class="col-3 nexus-gray">
                                                    <t t-esc="o.employee_id.department_id.name" />
                                                </div>
                                                <div class="col-2 nexus-gray"></div>
                                                <div class="col-2 nexus-gray"></div>
                                                <div class="col-2 nexus-gray"></div>
                                            </div>
                                            <!-- column section -->
                                        </div>
                                    </div>
                                    <!-- end of intro section -->

                                    <!-- intro section2 -->
                                    <div class="row">
                                        <div class="col-12">
                                            <!-- header row -->
                                            <div class="row nexus-green fw-bolder text-capitalize">
                                                <div
                                                    class="col-3 border border-bottom-0 border-light">
                                                    Designation
                                                </div>
                                                <div
                                                    class="col-3 border border-bottom-0 border-light">
                                                    Tin</div>
                                                <div
                                                    class="col-2 border border-bottom-0 border-light fit-text">
                                                    NSSF number
                                                </div>
                                                <div
                                                    class="col-2 border border-bottom-0 border-light fit-text">
                                                    Account Number
                                                </div>
                                                <div
                                                    class="col-2 border border-bottom-0 border-light">
                                                    Bank</div>
                                            </div>
                                            <!-- end of header row -->

                                            <!-- column section2 -->
                                            <div class="row">
                                                <div class="col-3 nexus-gray">
                                                    <t t-esc="o.employee_id.job_title" />
                                                </div>
                                                <div class="col-3 nexus-gray">
                                                    <t t-esc="o.employee_id.tin" />
                                                </div>
                                                <div class="col-2 nexus-gray fit-text">
                                                    <t t-esc="o.employee_id.nssf" />
                                                </div>
                                                <div class="col-2 nexus-gray">
                                                    <!-- <t t-esc="o.employee_id.bank_account_id"/> -->
                                                </div>
                                                <div class="col-2 nexus-gray">
                                                    <t t-esc="o.employee_id.bank_name" />
                                                </div>
                                            </div>
                                            <!-- column section2 -->
                                        </div>
                                    </div>
                                    <!-- end of intro section2 -->

                                    <!-- earnings section -->
                                    <div class="row mt-4">
                                        <div class="col-12">
                                            <!-- header row -->
                                            <span t-foreach="o.worked_days_line_ids"
                                                t-as="worked_days">
                                                <div
                                                    class="row nexus-gray fw-bolder text-capitalize">
                                                    <div
                                                        class="col-3 border border-bottom-0 border-light">
                                                        Earnings
                                                    </div>
                                                    <div
                                                        class="col-3 border border-bottom-0 border-light fw-normal">
                                                        Days Worked
                                                    </div>
                                                    <div
                                                        class="col-2 border border-bottom-0 border-light">
                                                        <span t-field="worked_days.number_of_days" />
                                                    </div>
                                                    <div
                                                        class="col-2 border border-bottom-0 border-light"></div>
                                                    <div
                                                        class="col-2 border border-bottom-0 border-light"></div>
                                                </div>
                                            </span>
                                            <!-- end of header row -->
                                            <t
                                                t-foreach="o.line_ids.filtered(lambda x: x.total > 0 and x.code not in ['NET', 'GROSS'])"
                                                t-as="line">
                                                <!-- column -->
                                                <div class="row">
                                                    <div class="col-3">
                                                        <span t-field="line.name" />
                                                    </div>
                                                    <div class="col-3"></div>
                                                    <div class="col-2"></div>
                                                    <div class="col-2"></div>
                                                    <div class="col-2">
                                                        <span t-field="line.total" />
                                                    </div>
                                                </div>
                                                <!-- end of column -->
                                            </t>
                                        </div>
                                    </div>
                                    <!-- end of earnings section -->

                                    <!-- gross pay section -->
                                    <div class="row border-bottom border-3 border-top nexus-border">
                                        <div class="col-3 fw-bolder">Gross Pay</div>
                                        <div class="col-3"></div>
                                        <div class="col-2"></div>
                                        <div class="col-2"></div>
                                        <div class="col-2 text-end">
                                            <span
                                                t-esc="'{:.1f}'.format(sum(o.line_ids.filtered(lambda l: l.category_id.code in ['BASIC', 'ALW']).mapped('total')))" />
                                        </div>
                                    </div>
                                    <!-- end of gross pay section -->

                                    <!-- deductions -->
                                    <!-- header section -->
                                    <div class="row nexus-gray">
                                        <div class="col-3 fw-bolder">Deductions</div>
                                        <div class="col-3"></div>
                                        <div class="col-2"></div>
                                        <div class="col-2"></div>
                                        <div class="col-2"></div>
                                    </div>
                                    <!-- end of header section -->

                                    <t t-foreach="o.line_ids.filtered(lambda x: x.total &lt; 0)"
                                        t-as="ln">
                                        <!-- column -->
                                        <div class="row">
                                            <div class="col-3">
                                                <span t-field="ln.name" />
                                            </div>
                                            <div class="col-3"></div>
                                            <div class="col-2"></div>
                                            <div class="col-2"></div>
                                            <div class="col-2">
                                                <span t-field="ln.total" />
                                            </div>
                                        </div>
                                        <!-- end of column -->
                                    </t>
                                    <!-- end of deductions -->

                                    <!-- total deductions -->
                                    <div class="row border-top border-bottom nexus-border border-3">
                                        <div class="col-3 fw-bolder">Total Deductions</div>
                                        <div class="col-3"></div>
                                        <div class="col-2"></div>
                                        <div class="col-2"></div>
                                        <div class="col-2 text-end">
                                            <span t-field="o.deductions" />
                                        </div>
                                    </div>
                                    <!-- end of total deductions -->

                                    <t
                                        t-foreach="o.line_ids.filtered(lambda x:  x.total &gt; 0 and x.code == 'NET')"
                                        t-as="net">
                                        <!-- netpay section -->
                                        <div
                                            class="row mt-4 border-top border-bottom border-3 nexus-gray">
                                            <div class="col-3 fw-bolder">NET PAY</div>
                                            <div class="col-3"></div>
                                            <div class="col-2"></div>
                                            <div class="col-2"></div>
                                            <div class="col-2 bg-dark text-light text-end">
                                                <!-- <span t-field="net.total" /> -->
                                                <span t-field="net.total" />
                                            </div>
                                        </div>
                                        <!-- end of netpay section -->
                                    </t>

                                    <!-- signature section -->
                                    <div class="row d-flex align-items-center my-4">
                                        <div class="col-6 text-center">
                                            <div class="image-box">
                                                <!-- <img t-if="o.create_uid"
                                                    t-att-src="image_data_uri(o.create_uid.user_signature)"
                                                    alt="Signature" style="width:50%;height:150px;" /> -->
                                                <img t-if="o.create_uid"
                                                    t-att-src="image_data_uri(o.create_uid.user_signature)"
                                                    alt="Signature" class="img-fluid" />
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <span t-field="o.create_date"
                                                t-options="{'widget':'date'}" />
                                        </div>
                                    </div>
                                    <!-- end of signature section -->

                                    <!-- signature section -->
                                    <div class="row d-flex align-items-center fw-bold">
                                        <div class="col-6">HUMAN RESOURCE MANAGER</div>
                                        <div class="col-6">DATE</div>
                                    </div>
                                    <!-- end of signature section -->

                                    <br />
                                    <br />

                                    <div class="row">
                                        <div class="col-2"></div>
                                        <div class="col-8">
                                            <p>
                                                <strong>If you have any questions about this
                                                    payslip, please
                                                    contact:</strong>
                                            <br /> [Prossy Namirembe, +256
                                                (0) 700500283, prossy.namirembe@nexusgreen.com] </p>
                                        </div>
                                        <div class="col-2"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end main container -->
                    </t>
                </t>
            </t>
        </xpath>
    </template>
</odoo>