<odoo>
  <data>

    <template id="nexusgreen_custom_print.printout" name="nexusgreen_custom_print"
      inherit_id="purchase.report_purchaseorder_document">
      <xpath expr="//div[@class='page']" position="replace">
        <div class="page">
          <style> th, td { border: 1px solid #000000 !important; } <!-- td{
            padding: 0.25rem !important;
            } -->
          </style>
          <!-- purchase order ref -->
          <div class="row mb-3">
            <div class="col">
              <div class="fw-bolder">
                <strong>Purchase Order:</strong>
                <span t-field="o.name" />
              </div>
            </div>
          </div>
          <!-- end of purchase order ref -->

          <!-- represenative section -->
          <div class="row mb-3">
            <div class="col-12 border border-dark">
              <div class="row">
                <div class="col-4">
                  <div>
                    <strong>Representative:</strong>
                  </div>
                  <div>
                    <span t-field="o.user_id" class="m-0" />
                  </div>
                </div>
                <div class="col-4">
                  <div>
                    <strong>Your Order Reference:</strong>
                  </div>
                  <div>
                    <span t-field="o.partner_ref" />
                  </div>
                </div>
                <div class="col-4">
                  <div>
                    <strong>
                      Order Date:
                    </strong>
                  </div>
                  <div>
                    <span t-field="o.date_order" />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- end of representative section -->

          <!-- line items section -->
          <div class="row mb-4">
            <div class="col-12">
              <div class="mb-0">
                <table
                  class="table table-sm table-bordered border-black o_main_table border: 1px solid black;">
                  <thead>
                    <tr>
                      <th name="th_description">
                        <strong>Description</strong>
                      </th>
                      <th name="th_taxes">
                        <strong>Taxes</strong>
                      </th>
                      <th name="th_date_req" class="text-center">
                        <strong>Date Req.</strong>
                      </th>
                      <th name="th_quantity" class="text-right">
                        <strong>Qty</strong>
                      </th>
                      <th name="th_price_unit" class="text-right">
                        <strong>Unit Price</strong>
                      </th>
                      <th name="th_amount" class="text-right">
                        <strong>Amount</strong>
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <t t-set="current_subtotal" t-value="0" />
                    <t t-foreach="o.order_line" t-as="line">
                      <t t-set="current_subtotal"
                        t-value="current_subtotal + line.price_subtotal"
                        groups="account.group_show_line_subtotals_tax_excluded" />
                      <t t-set="current_subtotal"
                        t-value="current_subtotal + line.price_total"
                        groups="account.group_show_line_subtotals_tax_included" />

                      <tr
                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                        <t t-if="not line.display_type">
                          <td id="product">
                            <span t-field="line.name" />
                          </td>
                          <td name="td_taxes">
                            <span
                              t-esc="', '.join(map(lambda x: x.name, line.taxes_id))" />
                          </td>
                          <td class="text-center">
                            <span t-field="line.date_planned" />
                          </td>
                          <td class="text-right">
                            <span t-field="line.product_qty" />
                            <span t-field="line.product_uom.name" groups="uom.group_uom" />
                          </td>
                          <td class="text-right">
                            <span t-field="line.price_unit" />
                          </td>
                          <td class="text-right">
                            <span t-field="line.price_subtotal"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                          </td>
                        </t>
                        <t t-if="line.display_type == 'line_section'">
                          <td colspan="99" id="section">
                            <span t-field="line.name" />
                          </td>
                          <t t-set="current_section" t-value="line" />
                          <t t-set="current_subtotal" t-value="0" />
                        </t>
                        <t t-if="line.display_type == 'line_note'">
                          <td colspan="99" id="note">
                            <span t-field="line.name" />
                          </td>
                        </t>
                      </tr>
                      <t
                        t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                        <tr class="is-subtotal text-right">
                          <td colspan="99" id="subtotal">
                            <strong class="mr16">Subtotal</strong>
                            <span
                              t-esc="current_subtotal"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                            />
                          </td>
                        </tr>
                      </t>
                    </t>
                  </tbody>
                </table>
              </div>
              <div class="my-0">
                <div id="total" class="row justify-content-start">
                  <div class="col-4">
                    <table class="table table-sm">
                      <tr class="border-black">
                        <td name="td_subtotal_label">
                          <strong>Subtotal</strong>
                        </td>
                        <td class="text-right">
                          <span t-field="o.amount_untaxed"
                            t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                        </td>
                      </tr>
                      <tr>
                        <td name="td_taxes_label">Taxes</td>
                        <td class="text-right">
                          <span t-field="o.amount_tax"
                            t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                        </td>
                      </tr>
                      <tr class="border-black o_total">
                        <td name="td_amount_total_label">
                          <strong>Total</strong>
                        </td>
                        <td class="text-right">
                          <span t-field="o.amount_total"
                            t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                        </td>
                      </tr>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- end of line items section -->

          <!-- footer section -->
          <div class="row">
            <div class="col-12 border border-dark">
              <div>
                <div style="font-weight: 900 !important;">
                  If you have any questions about this purchase order, please contact
                </div>
                <hr class="border-dark" />
                <div>
                  Email:.........................................
                  Or: .......................................
                </div>
              </div>
              <hr class="border-dark" />
              <div>
                <div class="row">
                  <!-- created by section -->
                  <div class="col-4">
                    <div class="mb-4 font-weight-bold" style="font-weight: 900 !important;">
                      <div class="row">
                        <div class="col-6">Created By</div>
                        <div class="col-6">
                          <span t-esc="o.create_uid.name" />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6 d-flex align-items-center">
                        <div>Signature: </div>
                      </div>
                      <div class="col-6">
                        <img t-if="o.create_uid.user_signature"
                          t-att-src="image_data_uri(o.create_uid.user_signature)" alt="company_cop"
                          class="img-fluid" />
                      </div>
                    </div>
                    <!-- <div class="row">
                      <div class="col-6">Signature: </div>
                      <div class="col-6">............</div>
                    </div> -->
                    <div class="row">
                      <div class="col-6">Date: </div>
                      <div class="col-6">
                        <span t-field="o.create_date" t-options="{'widget':'date'}" />
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6">Date: </div>
                      <div class="col-6">............</div>
                    </div>
                  </div>
                  <!-- end of created by section -->

                  <!-- checked by section -->
                  <div class="col-4">
                    <div class="mb-4 font-weight-bold" style="font-weight: 900 !important;">
                      <div class="row">
                        <div class="col-6">Checked By</div>
                        <div class="col-6">
                          <span t-esc="o.checked_by.name" />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6 d-flex align-items-center">
                        <div class="col-6 d-flex align-items-center">
                          <div>Signature: </div>
                        </div>
                      </div>
                      <div class="col-6">
                        <t t-if="o.state == 'approved'">
                          <img t-if="o.checked_by.user_signature"
                            t-att-src="image_data_uri(o.checked_by.user_signature)"
                            alt="company_cop" class="img-fluid" />
                        </t> .</div>
                    </div>
                    <div class="row">
                      <div class="col-6">Date: </div>
                      <div class="col-6">
                        <t t-if="o.state == 'approved'">
                          <span
                            t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')" />
                        </t>
                      </div>
                    </div>
                  </div>
                  <!-- end of checked by section -->

                  <!-- approved by section -->
                  <div class="col-4">
                    <div class="mb-4 font-weight-bold" style="font-weight: 900 !important;">
                      <div class="row">
                        <div class="col">Approved By</div>
                        <div class="col">
                          <t t-if="o.state in ['approved','pm','coo','ceo']">
                            <span t-esc="o.approval_by.name" />
                          </t>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6 d-flex align-items-center">
                        <div>Signature: </div>
                      </div>
                      <div class="col-6">
                        <t t-if="o.state in ['approved','pm','coo','ceo']">
                          <img t-if="o.approval_by.user_signature"
                            t-att-src="image_data_uri(o.approval_by.user_signature)"
                            alt="company_cop" class="img-fluid" />
                        </t>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6">Date: </div>
                      <div class="col-6">
                        <t t-if="o.state in ['approved','pm','coo','ceo']">
                          <span t-esc="o.approved_date" />
                        </t>
                      </div>
                    </div>
                  </div>
                  <!-- end of approved by section -->
                </div>
              </div>
              <hr class="border-dark" />
              <div>
                <div class="row">
                  <!-- created by section -->
                  <div class="col-4">
                    <div class="mb-4 font-weight-bold" style="font-weight: 900 !important;">
                      Accepted by
                    </div>
                    <div class="row">
                      <div class="col-6 d-flex align-items-center">
                        <div>Signature: </div>
                      </div>
                      <div class="col-6">............</div>
                    </div>
                    <div class="row">
                      <div class="col-6">Date: </div>
                      <div class="col-6">............</div>
                    </div>
                  </div>
                  <!-- end of created by section -->

                  <!-- authorised by CFO -->
                  <div class="col-4">
                    <div class="mb-4 font-weight-bold" style="font-weight: 900 !important;">
                      <div class="row">
                        <div class="col">Authorised by CFO</div>
                        <div class="col">
                          <t t-if="o.state in ['approved']">
                            <span t-esc="o.ceo.name" />
                          </t>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6 d-flex align-items-center">
                        <div class="col-6 d-flex align-items-center">
                          <div>Signature: </div>
                        </div>
                      </div>
                      <div class="col-6"><t t-if="o.state == 'approved' and o.require_ceo">
                          <img t-if="o.ceo.user_signature"
                            t-att-src="image_data_uri(o.ceo.user_signature)"
                            alt="company_cop" class="img-fluid" />
                        </t> .</div>
                    </div>
                    <div class="row">
                      <div class="col-6">Date: </div>
                      <div class="col-6">
                        <t t-if="o.state == 'approved' and o.require_ceo">
                          <span t-esc="o.ceo_approval_date" />
                        </t>
                      </div>
                    </div>
                  </div>
                  <!-- end of authorised by CFO -->
                </div>
              </div>
            </div>
          </div>
          <!-- end of footer section -->

          <!-- divider -->
          <!-- <hr class="border-dark" /> -->
          <!-- end of divider -->
          <!-- <div>
            Everything Solar
          </div> -->
        </div>

        <div class="footer">
          <div>
            Everything Solar
          </div>
        </div>
      </xpath>
    </template>
  </data>
</odoo>